{
  "apiVersion": "0.0.1",
  "info": {
    "name": "Hoc Vien Truyen Tranh",
    "shortname": "HVTT",
    "icon": "http://hocvientruyentranh.net/favicon.ico",
    "lang": "Vietnamese",
    "origins": [
      "http://hocvientruyentranh.com"
    ],
    "loginRequired": false,
    "headers": {
      "user-agent": "Mozilla/5.0 (Windows NT 6.3; WOW64)"
    }
  },
  "categories": [{
    "info": {
      "name": "Manga List",
      "path": "/manga/all",
      "queryParams": [{
        "name": "page",
        "options": [],
        "default": "1"
      }]
    },  
    "parsers": [
      {
        "codename": "uri",
        "conf": [{
          "role": "link",
          "use": "html/select_parser",
          "type": "multiple",
          "instruction":{
            "selector": "table.table-hover>tbody>tr>td:nth-child(1)>a",
            "attribute": "href"
          }
        }]
      },
      {
        "codename": "pagination",
        "conf":[{
          "role": "primary",
          "use": "html/select_parser",
          "type": "multiple",
          "instruction": {
            "selector": ".pagination.no-margin>li>a",
            "attribute": ""
          }
        },
        {
          "role": "link",
          "use": "html/select_parser",
          "type":"multiple",
          "instruction":{
            "selector": ".pagination.no-margin>li>a",
            "attribute": "href"
          }
        }]
      },
      {
        "codename": "prev",
        "conf": [{
          "role": "link",
          "use": "html/select_parser",
          "type":"single",
          "instruction":{
            "selector": ".pagination.no-margin>li>a[rel=prev]",
            "attribute": "href"
          }
        }]
      },
      {
        "codename": "next",
        "conf": [{
          "role": "link",
          "use": "html/select_parser",
          "type":"single",
          "instruction":{
            "selector": ".pagination.no-margin>li>a[rel=next]",
            "attribute": "href"
          }
        }]
      },
      {
        "codename": "img",
        "conf": [{
          "role": "link",
          "use": "html/select_parser",
          "type":"single",
          "instruction": {
            "selector": "table.table-hover>tbody>tr>td:nth-child(1)>a",
            "attribute": "data-thumbnail"
          }
        }]
      },
      {
        "name": "title",
        "conf": [{
          "role": "primary",
          "use": "html/select_parser",
          "type":"single",
          "instruction":{
            "selector": "table.table-hover>tbody>tr>td:nth-child(1)>a",
            "attribute": "title"
          }
        }]
      }
    ]
  }]
}
